---
import logo from '../assets/Logo.png';

const today = new Date();
---

<footer class="site-footer">
	<div class="wrap">
		<div class="footer__brand">
			<img class="footer__logo" src={logo.src} alt="Leading Edge Construction logo" width="56" height="56" />
			<div>
				<strong>Leading Edge Construction</strong>
				<span>Outdoor Living &amp; Site Enhancements</span>
			</div>
		</div>
		<div class="footer__content">
			<p>
				&copy; {today.getFullYear()} Leading Edge Construction. For more than 15 years, we've helped Annapolis
				homeowners reimagine their properties with custom outdoor spaces that blend beauty, durability, and
				everyday functionâ€”and we stand behind every detail.
			</p>
			<div class="footer__links">
				<a href="tel:14108583808">410-858-3808</a>
				<a href="mailto:leadingedgeavelar@gmail.com">leadingedgeavelar@gmail.com</a>
				<a href="/privacy">Privacy</a>
			</div>
		</div>
	</div>
</footer>
<style>
	.site-footer {
		padding: 3rem 0 4rem;
		background: linear-gradient(180deg, #0f6a6a 0%, #0e4d54 100%);
		color: rgba(253, 249, 244, 0.85);
	}
	.wrap {
		width: min(1120px, 92vw);
		margin: 0 auto;
		display: grid;
		gap: 2rem;
	}
	.footer__brand {
		display: flex;
		align-items: center;
		gap: 0.9rem;
	}
	.footer__logo {
		display: block;
		width: clamp(48px, 9vw, 56px);
		height: auto;
	}
	.footer__brand strong {
		font-size: 1.1rem;
		color: #fdf9f4;
	}
	.footer__brand span {
		display: block;
		font-size: 0.75rem;
		text-transform: uppercase;
		letter-spacing: 0.16em;
	}
	.footer__content {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}
	.footer__content p {
		margin: 0;
		max-width: 40rem;
	}
	.footer__links {
		display: flex;
		flex-wrap: wrap;
		gap: 1.5rem;
		font-weight: 600;
	}
	.footer__links a {
		color: #fdf9f4;
		text-decoration: none;
		border-bottom: 1px solid transparent;
		padding-bottom: 0.2rem;
	}
	.footer__links a:hover {
		border-bottom-color: rgba(253, 249, 244, 0.6);
	}
	@media (max-width: 640px) {
		.wrap {
			gap: 1.5rem;
		}
		.footer__content {
			gap: 1.25rem;
		}
	}
</style>
