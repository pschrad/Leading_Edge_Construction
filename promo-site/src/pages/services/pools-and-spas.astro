---
// src/pages/services/pools-and-spas.astro
import BaseHead from '../../components/BaseHead.astro';
import { getEntryBySlug } from 'astro:content';
const entry = await getEntryBySlug('services', 'pools-and-spas');
const { data, body } = entry;
---
<html lang="en">
  <head>
    <BaseHead title={`${data.title} | Your Brand`} description={data.excerpt} />
  </head>
  <body>
    <main class="container">
      <h1>{data.title}</h1>
      {data.heroImage && <img src={data.heroImage} alt={data.title} />}
      <article class="prose">
        {body}
      </article>
    </main>
  </body>
</html>
